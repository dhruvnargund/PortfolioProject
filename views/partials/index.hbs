{{!-- section --}}

<section class="section my-4">
    <div class="container text-center">
        <div class="title py-5">
            <h1>Upload your beautiful images here</h1>
            <p class="subtitle">Upload Imaes to <strong>MongoDB</strong></p>
        </div>


        <div class="row justify-content-center">
            <div class="col-4">
                <form action="/uploadmultiple" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-8">
                            <input type="file" class="form-control" name='images' id="formFile" multiple>
                        </div>
                        <div class="col-2">
                            <input type="submit" class="btn btn-danger" value='Upload Images'>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        {{!-- display images --}}
        <section class="mt-5">
            <div class="row">
                <div class="col-3">
                    <div class="card shadow" style="width: 18rem;">
                        {{!-- img-fluid will control the image size --}}
                        <img src="..." class="card-img-top img-fluid" alt="...">
                    </div>
                </div>
            </div>
        </section>
        {{!-- /display images --}}
    </div>
</section>

{{!-- /section --}}